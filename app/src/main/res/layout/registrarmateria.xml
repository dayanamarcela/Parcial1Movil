<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nombre de la materia"
        android:id="@+id/editNombreMateria"
        />

    <EditText
        android:id="@+id/editCodigoMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Codigo de la materia"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnAgregarMateria"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="AGREGAR"

            />
        <Button
            android:id="@+id/btnCancelarMateria"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="CANCELAR"></Button>
    </LinearLayout>



        />
        />

</LinearLayout>